<UserControl x:Class="Updater.Controls.SliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Updater"
             mc:Ignorable="d" 
             d:DesignHeight="279" d:DesignWidth="754">
    <Grid>
        <ContentPresenter Content="{Binding SelectedSlide}">
            <ContentPresenter.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <Image Source="{Binding Image}"/>

                        <TextBlock  Text="{Binding Title}" Margin="36,50,219,17" Foreground="White" FontSize="48" TextWrapping="Wrap" FontFamily="Arial"/>
                        <TextBlock  Text="{Binding News}" Margin="36,195,378,10" TextWrapping="Wrap" FontFamily="Arial" Foreground="#FFFDFFA6" FontSize="18" FontWeight="Light"/>
                    </Grid>
                </DataTemplate>
            </ContentPresenter.ContentTemplate>
        </ContentPresenter>
        <ListView HorizontalAlignment="Center" Margin="0,236,0,0" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" ItemsSource="{Binding Slides}" SelectedItem="{Binding SelectedSlide}">

            <ListView.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                                 Color="Transparent"/>
            </ListView.Resources>

            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel></WrapPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5,0">
                        <Rectangle  Height="14" Width="14" RadiusX="90" RadiusY="90" Stroke="#FF88C6FF"></Rectangle>
                        <Rectangle Margin="0,0,0,0.5" Height="10" Width="10" RadiusX="90" RadiusY="90">
                            <Rectangle.Style>
                                <Style TargetType="Rectangle">
                                    <Setter Property="Fill" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={
                        RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem }}}"
                                                     Value="True">
                                            <Setter Property="Fill" Value="#FFF27D"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={
                        RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem }}}"
                                                     Value="True">
                                            <Setter Property="Fill" Value="Yellow"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Rectangle.Style>
                        </Rectangle>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
