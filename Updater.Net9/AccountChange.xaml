<Window x:Class="Updater.AccountChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Updater.Properties"
        xmlns:updater="clr-namespace:Updater"
        mc:Ignorable="d"
        Title="AccountChange" Height="450" Width="400"
        ResizeMode="NoResize"
        d:DataContext="{ d:DesignInstance updater:AccountChange}"
        WindowStyle="None" Name="Main">
    
    <Window.Background>
        <ImageBrush ImageSource="Pictures/ChangeAccount.png"></ImageBrush>
    </Window.Background>
    
    <Grid Margin="10" MouseDown="Grid_MouseDown" >
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Выберите аккаунт" Foreground="#009999" FontSize="16" FontWeight="Medium"
               VerticalAlignment="Center">
        </Label>
        <Border Grid.Row="1" BorderBrush="SlateGray" BorderThickness="2">
            <ListView x:Name="AccountsList" ItemsSource="{Binding SavedAccounts}" Background="Transparent"
                      BorderBrush="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Hidden"
                      SelectedItem="{Binding SelectedAccount,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <Button DockPanel.Dock="Right" Style="{StaticResource RoundedButton}"
                                    HorizontalAlignment="Right"
                                    Command="{Binding Delete, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                    CommandParameter="{Binding .}">
                                ✖
                            </Button>
                            <Image DockPanel.Dock="Left" Source="Pictures/person.png" Stretch="Fill" Width="16"
                                   Height="16">
                            </Image>
                            <Label DockPanel.Dock="Left" Content="{Binding Login}" Foreground="WhiteSmoke"
                                   FontSize="16">
                            </Label>

                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" VerticalAlignment="Center" Template="{DynamicResource RegButton}"
                    HorizontalAlignment="Center" Height="30" Width="120" Click="Select">
                Выбрать
            </Button>
            <Button Grid.Column="1" VerticalAlignment="Center" Template="{DynamicResource RegButton}"
                    HorizontalAlignment="Center" Height="30" Width="120" Click="Cancel">
                Отмена
            </Button>
        </Grid>
    </Grid>
</Window>