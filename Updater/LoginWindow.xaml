<Window x:Class="Updater.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Updater"
        xmlns:utillsClasses="clr-namespace:Updater.UtillsClasses"
        xmlns:controls="clr-namespace:Updater.Controls"
        mc:Ignorable="d"
        Title="Login Dispel" Height="699.2" Width="1130" AllowsTransparency="True" WindowStyle="None"
        Background="{x:Null}" WindowStartupLocation="CenterScreen" ContentRendered="Window_ContentRendered"
        Icon="Pictures/logo.ico">
    <Window.Resources>
        <utillsClasses:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource OpenAnimation}" />
        </EventTrigger>
    </Window.Triggers>
    <Grid x:Name="grid" MouseDown="Grid_MouseDown" Width="499" Height="776">
        <Grid.Background>
            <ImageBrush ImageSource="Pictures/LoginBack.png" />
        </Grid.Background>
        <controls:TextBoxPlaceholder x:Name="login"
                                     Text="{Binding Login, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     TextAlignment="Left"
                                     Placeholder="{Binding Localizations.LoginPlaceHolderText.GetLocStr}"
                                     HorizontalAlignment="Left" Height="28" Margin="152,355,0,0" TextWrapping="Wrap"
                                     VerticalAlignment="Top" Width="238" Background="{x:Null}" BorderBrush="{x:Null}"
                                     FontSize="14" Foreground="#FFF4F4F4" SelectionBrush="{x:Null}" />
        <Button Width="50" Height="50" Margin="370,0,0,40"  Background="Transparent" Template="{StaticResource ButtonTemplateSettings}" Click="ButtonBase_OnClick" BorderBrush="Transparent">
        </Button>
        <PasswordBox PasswordChanged="Pass_OnPasswordChanged" x:Name="pass" HorizontalContentAlignment="Left"
                     HorizontalAlignment="Left" Height="28" Margin="152,414,0,0" VerticalAlignment="Top" Width="210"
                     Background="Transparent" BorderBrush="Transparent" FontSize="14" Foreground="#FFF4F4F4"
                     SelectionBrush="{x:Null}" Template="{DynamicResource TextBoxBaseControlTemplate2}" />
        <Button x:Name="ShowPass" IsHitTestVisible="True" HorizontalAlignment="Left" Margin="372,424,0,0"
                VerticalAlignment="Top" Height="12" Width="18" RenderTransformOrigin="0.5,0.5" Cursor="Hand"
                PreviewMouseDown="ShowPass_PreviewMouseDown" PreviewMouseUp="ShowPass_PreviewMouseUp"
                Style="{DynamicResource ShowPassStyle}">
            <Button.OpacityMask>
                <ImageBrush ImageSource="Pictures/Eye.png" />
            </Button.OpacityMask>
        </Button>
        <Button x:Name="SignIn" Content="{Binding Localizations.LoginText.GetLocStr}" HorizontalAlignment="Left"
                Margin="105,499,0,0" VerticalAlignment="Top" Width="296"
                Template="{DynamicResource LoginButtonTemlate}" Height="38" Click="SignIn_OnClick" Cursor="Hand" />
        <CheckBox x:Name="CheckedLogPass" Content="{Binding Localizations.RememberAccountText.GetLocStr}"
                  HorizontalAlignment="Left" Margin="154,468,0,0" VerticalAlignment="Top" FontSize="16" Cursor="Hand"
                  Style="{DynamicResource SaveLogin}" Foreground="#FFF0DCDC" Height="21" Width="212" />
        <Button Content="{Binding Localizations.RegisterText.GetLocStr}" HorizontalAlignment="Left"
                Margin="105,553,0,0" VerticalAlignment="Top" Width="296" Template="{DynamicResource RegButton}"
                Height="38" Cursor="Hand" />
        <Button x:Name="forgot" Content="{Binding Localizations.ForgotPassText.GetLocStr}" HorizontalAlignment="Left"
                Margin="107,608,0,0" VerticalAlignment="Top" Width="294" Template="{DynamicResource LinkButton2}"
                Foreground="#FFCDCDCD" Height="24" Cursor="Hand" Click="forgot_Click" />
        <Button x:Name="Tray" Command="{Binding TrayCommand}" Content="Tray" HorizontalAlignment="Left"
                Margin="454,3,0,0" VerticalAlignment="Top" Width="21" Cursor="Hand" Height="18"
                Template="{DynamicResource TrayExitTemplate}" Background="Transparent" />
        <Button x:Name="Exit" Command="{Binding ExitCommand}" Content="Exit" HorizontalAlignment="Left"
                Margin="477,3,0,0" VerticalAlignment="Top" Width="18" Cursor="Hand" Height="18"
                Template="{DynamicResource TrayExitTemplate}" Background="Transparent" />
        <TextBox x:Name="pass_visible" TextAlignment="Center" HorizontalAlignment="Left" Height="27"
                 Margin="345,283,0,0" TextWrapping="Wrap" Text="{Binding Login}" VerticalAlignment="Top" Width="176"
                 Background="{x:Null}" BorderBrush="{x:Null}" FontSize="14" Foreground="#FFF4F4F4"
                 SelectionBrush="{x:Null}" Template="{DynamicResource TextBoxBaseControlTemplate1}" Visibility="Hidden" />
        <Label x:Name="SignInError" Content="{Binding SignError}" HorizontalAlignment="Left" Margin="118,226,0,0"
               VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFCF0000" Width="253" Height="27" />
        <TextBlock Text="{Binding Localizations.WelcomeText.GetLocStr}" TextAlignment="Center"
                   HorizontalAlignment="Left" Margin="66,258,0,0" VerticalAlignment="Top" Foreground="#FFF0DCDC"
                   FontFamily="Arial" FontWeight="Light" FontSize="28" Height="52" Width="368" />
        <TextBox x:Name="ShowPassText" Text="{Binding Pass}" 
                 HorizontalContentAlignment="Left"
                 HorizontalAlignment="Left" Height="28" Margin="152,414,0,0" VerticalAlignment="Top" Width="210"
                 Background="{x:Null}" BorderBrush="{x:Null}" FontSize="14" Foreground="#FFF4F4F4"
                 SelectionBrush="{x:Null}" Template="{DynamicResource TextBoxBaseControlTemplate1}" Visibility="Hidden" />
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Height="21" Margin="764,675,0,0"
                    VerticalAlignment="Top" Width="117" Visibility="Hidden">
            <Button x:Name="VK" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="22"
                    Template="{DynamicResource VKTwitter}" Background="#FFDDDDDD" Height="22" Cursor="Hand"
                    Click="VK_Click">
                <Button.OpacityMask>
                    <ImageBrush ImageSource="Pictures/vk.png" />
                </Button.OpacityMask>
            </Button>
            <Button x:Name="Telegram" Content="Button" Margin="10,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Width="22" Template="{DynamicResource VKTwitter}" Background="#FFDDDDDD" Height="22" Cursor="Hand"
                    Click="Telegram_Click">
                <Button.OpacityMask>
                    <ImageBrush ImageSource="Pictures/telegram.png" />
                </Button.OpacityMask>
            </Button>
            <Button x:Name="Instagram" Content="Button" Margin="0,0,10,0" HorizontalAlignment="Left"
                    VerticalAlignment="Top" Width="22" Template="{DynamicResource VKTwitter}" Background="#FFDDDDDD"
                    Height="22" Cursor="Hand" Click="Instagram_Click">
                <Button.OpacityMask>
                    <ImageBrush ImageSource="Pictures/instagram.png" />
                </Button.OpacityMask>
            </Button>
            <Button x:Name="Discord" Content="Button" HorizontalAlignment="Left" Width="22"
                    Template="{DynamicResource VKTwitter}" Background="#FFDDDDDD" Cursor="Hand" Margin="0,0,0,-1"
                    Click="Discord_Click">
                <Button.OpacityMask>
                    <ImageBrush ImageSource="Pictures/discord.png" />
                </Button.OpacityMask>
            </Button>
        </StackPanel>
        <ComboBox HorizontalAlignment="Left" FontFamily="Leelawadee UI Semilight"
                  ItemsSource="{Binding Localizations.Languages}"
                  SelectedItem="{Binding Localizations.SelectedLanguage}" Margin="31,22,0,0" VerticalAlignment="Top"
                  Width="115" Style="{DynamicResource ComboBoxFlatStyle}" Height="24" Foreground="White"
                  Background="#2E2C2D" BorderBrush="Transparent" />


        <StackPanel HorizontalAlignment="Left" Height="26" Margin="154.126,24.063,0,0" VerticalAlignment="Top"
                    Width="493" Orientation="Horizontal">
            <Button x:Name="Site" Content="{Binding Localizations.SiteText.GetLocStr}" HorizontalAlignment="Left"
                    VerticalAlignment="Top" Width="166" Template="{DynamicResource LinkButton2}" Height="28"
                    Foreground="#FFDED6D6" Cursor="Hand" Margin="0,0,0,-2" Click="Site_Click" />
            <Button x:Name="Support" Content="{Binding Localizations.SupportText.GetLocStr}" HorizontalAlignment="Left"
                    VerticalAlignment="Top" Width="132" Template="{DynamicResource LinkButton2}" Height="28"
                    Foreground="#FFDED6D6" Cursor="Hand" Click="Support_Click" />
        </StackPanel>
    </Grid>
</Window>